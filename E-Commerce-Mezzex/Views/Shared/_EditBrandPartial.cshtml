<div class="modal fade" id="editBrandModal" tabindex="-1" role="dialog" aria-labelledby="editBrandModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBrandModalLabel">Edit Brand</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editBrandForm">
                    <div class="form-group mb-3">
                        <label for="brandName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="brandName" name="Name" value="@Model.Name" required>
                    </div>
                    <div class="form-group mb-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="brandShowOnHomePage" name="ShowOnHomePage" @(Model.ShowOnHomePage ? "checked" : "")>
                            <label class="custom-control-label" for="brandShowOnHomePage">Show On Home Page</label>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="brandPublished" name="Published" @(Model.Published ? "checked" : "")>
                            <label class="custom-control-label" for="brandPublished">Published</label>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="brandDeleted" name="Deleted" @(Model.Deleted ? "checked" : "")>
                            <label class="custom-control-label" for="brandDeleted">Deleted</label>
                        </div>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveBrand">Save</button>
            </div>
        </div>
    </div>
</div>
