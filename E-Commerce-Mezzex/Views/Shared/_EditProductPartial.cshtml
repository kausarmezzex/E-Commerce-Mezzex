<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editProductForm">
                    <div class="mb-3">
                        <label for="productName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="productName" name="Name" value="@Model.Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="productNotReturnable" class="form-label">Not Returnable</label>
                        <input type="checkbox" class="form-check-input" id="productNotReturnable" name="NotReturnable" @(Model.NotReturnable ? "checked" : "")>
                    </div>
                    <div class="mb-3">
                        <label for="productDisableBuyButton" class="form-label">Disable Buy Button</label>
                        <input type="checkbox" class="form-check-input" id="productDisableBuyButton" name="DisableBuyButton" @(Model.DisableBuyButton ? "checked" : "")>
                    </div>
                    <div class="mb-3">
                        <label for="productShowOnHomePage" class="form-label">Show On Home Page</label>
                        <input type="checkbox" class="form-check-input" id="productShowOnHomePage" name="ShowOnHomePage" @(Model.ShowOnHomePage ? "checked" : "")>
                    </div>
                    <div class="mb-3">
                        <label for="productAllowCustomerReview" class="form-label">Allow Customer Review</label>
                        <input type="checkbox" class="form-check-input" id="productAllowCustomerReview" name="AllowCustomerReview" @(Model.AllowCustomerReview ? "checked" : "")>
                    </div>
                    <div class="mb-3">
                        <label for="productAllowCustomerReview" class="form-label">Allow Customer Review</label>
                        <input type="checkbox" class="form-check-input" id="productAllowCustomerReview" name="AllowCustomerReview" @(Model.AllowCustomerReview ? "checked" : "")>
                    </div>
                    <div class="mb-3">
                        <label for="IsPublish" class="form-label">IsPublish</label>
                        <input type="checkbox" class="form-check-input" id="IsPublish" name="IsPublish" @(Model.IsPublish ? "checked" : "")>
                    </div>
                    <input type="hidden" name="Id" value="@Model.Id">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveProduct">Save</button>
            </div>
        </div>
    </div>
</div>
