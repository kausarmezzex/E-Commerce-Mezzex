@model List<E_Commerce_Mezzex.Models.Domain.Product>

@{
    ViewBag.Title = "All Products";
}

<h2>All Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (product.Images != null && product.Images.Any())
                {
                    <img src="@Url.Content(product.Images.FirstOrDefault().VirtualPath)" class="card-img-top" alt="@product.Name">
                }
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: $@product.Price</p>
                    <a href="@Url.Action("Details", "Products", new { id = product.Id, brandId = product.BrandId , categoryId = product.CategoryId })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
