@model E_Commerce_Mezzex.Models.Domain.Product

<head>
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
</head>
<div class="card-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label asp-for="PairDiscount" class="control-label">Discount (in percentage)</label>
                <input asp-for="PairDiscount" class="form-control" />
                <span asp-validation-for="PairDiscount" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
   
   
    <div class="card-body">
        <div id="pairedProductsWrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <label asp-for="PairedProductId" class="control-label">Select Paired Product</label>
                    <table id="product-table" class="table table-bordered table-hover" aria-describedby="pairedProductsInfo">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Product Name</th>
                                <th>SKU</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in (List<E_Commerce_Mezzex.Models.ViewModel.ProductViewModel>)ViewBag.Products)
                            {
                                <tr>
                                    <td><input type="checkbox" name="PairedProductId" value="@product.Id" /></td>
                                    <td>@product.Name</td>
                                    <td>@product.SKU</td>
                                    <td>@product.Price</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Select</th>
                                <th>Product Name</th>
                                <th>SKU</th>
                                <th>Price</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <span asp-validation-for="PairedProductId" class="text-danger"></span>
</div>



<script>
    $(document).ready(function () {
        $('#product-table').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true
        });
    });
</script>
