@model IEnumerable<E_Commerce_Mezzex.Models.ViewModel.ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
}

<h2>Manage Roles for @ViewBag.UserName</h2>

<form asp-action="Manage" method="post">
    <input type="hidden" name="userId" value="@ViewBag.userId" />
    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model.ElementAt(i).RoleName</td>
                    <td>
                        <input type="checkbox" name="model[@i].Selected" value="true" @(Model.ElementAt(i).Selected ? "checked" : "") />
                        <input type="hidden" name="model[@i].RoleName" value="@Model.ElementAt(i).RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
