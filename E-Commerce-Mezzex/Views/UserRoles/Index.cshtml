@model IEnumerable<E_Commerce_Mezzex.Models.ViewModel.UserRolesViewModel>

@{
    ViewData["Title"] = "User Roles Management";
}

<h2>User Roles Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Manage Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a href="@Url.Action("Manage", new { userId = user.UserId })" class="btn btn-primary">Manage</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateRole")" class="btn btn-success">Create New Role</a>
